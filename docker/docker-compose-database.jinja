version: "3.5"

networks:
  wordpress_network:
    name: wordpress_network
    driver: bridge

services:
  wordpress_db:
    image: mysql:5.7
    restart: always
    container_name: wordpress_db
    environment:
      MYSQL_ROOT_PASSWORD: {{ mysql_root_password }}
      MYSQL_DATABASE: {{ mysql_database }}
      MYSQL_USER: {{ mysql_user }}
      MYSQL_PASSWORD: {{ mysql_password }}
    networks:
      - wordpress_network
    ports:
      - {{ database_port }}:3306